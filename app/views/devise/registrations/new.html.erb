<%= content_tag :nav, class: "custom-nav" do %>
  <%= content_tag :div, class: "custom-nav-content" do %>
    <% if controller_name == "registrations" %>
      <% title = "Sign up" %>
    <% elsif controller_name == "sessions" %>
      <% title = "Log in" %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag :div, class: "authentication-pages" do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= content_tag :div, class: "field" do %>
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "input" %>
    <% end %>

    <%= content_tag :div, class: "field" do %>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    <% end %>

    <%= content_tag :div, class: "field" do %>
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <%= content_tag :em, "(#{@minimum_password_length} characters minimum)" %>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
    <% end %>

    <%= content_tag :div, class: "field" do %>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
    <% end %>

    <%= content_tag :div, class: "actions" do %>
      <%= f.submit "Sign up", class: "custom-button" %>
    <% end %>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
