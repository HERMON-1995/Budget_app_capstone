<%= content_tag :nav, class: "custom-nav" do %>
  <%= content_tag :div, class: "custom-nav-content" do %>
    <% if controller_name == "registrations" %>
      <% title = "Sign up" %>
    <% elsif controller_name == "sessions" %>
      <% title = "Log in" %>
    <% end %>
  <% end %>
<% end %>

<div class="authentication-pages">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= content_tag :div, class: "field" do %>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
  <% end %>

  <%= content_tag :div, class: "field" do %>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
  <% end %>

  <% if devise_mapping.rememberable? %>
    <%= content_tag :div, class: "field" do %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end %>
  <% end %>

  <%= content_tag :div, class: "actions" do %>
    <%= f.submit "Log in", class: "custom-button" %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
</div>
